    <id>org.myorg</id>
    <name>Simple</name>
    <version>1.0</version>
    <vendor email="sample@sample.com" url="sample.com">Sample</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

